<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cursoandroid.priscila.cyllacempresaconsultoria.MainActivity"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo_cyllac"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/empresaId"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="32dp"
        android:background="@drawable/company" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/servicoId"
        android:layout_alignTop="@+id/empresaId"
        android:layout_alignEnd="@+id/imageView"
        android:background="@drawable/menu_servico"
        android:layout_alignParentStart="false" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/clienteId"
        android:layout_marginTop="19dp"
        android:background="@drawable/menu_cliente"
        android:layout_below="@+id/empresaId"
        android:layout_alignStart="@+id/empresaId" />

    <ImageView
        android:id="@+id/contatoId"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/servicoId"
        android:layout_alignTop="@+id/clienteId"
        android:background="@drawable/menu_contato" />

</RelativeLayout>
